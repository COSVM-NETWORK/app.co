{
  "extends": ["airbnb", "plugin:prettier/recommended"],
  "plugins": ["babel", "jest"],
  "rules": {
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "no-unused-expressions": ["error", { "allowTaggedTemplates": true }]
  },
  "env": {
    "node": true,
    "es6": true,
    "jest/globals": true
  }
}
